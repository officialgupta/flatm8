<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages!%>

  <div class="field">
    <%= f.label :email, :class => 'field' %><br />
    <%= f.email_field :email, :class => 'field_input', autofocus: true %>
  </div>

  <div class="break"></div>

  <div class="field">
    <%= f.label :password, :class => 'field'%>
    <% if @minimum_password_length %>
    <em class="field" id="rem">(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, :class => 'field_input', autocomplete: "off" %>
  </div>

  <div class="break"></div>

  <div class="field">
    <%= f.label :password_confirmation, :class => 'field'%><br />
    <%= f.password_field :password_confirmation,:class => 'field_input', autocomplete: "off" %>
  </div>

  <div class="break"></div>

  <div class="actions">
    <%= f.submit "Sign up", :class => 'btn', :id => 'signup'%>
  </div>

  <div class="sign_in_portal">
    <p>Already signed up? </p>

  </div>
<% end %>

<%= render "devise/shared/links" %>
