<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email, :class => 'field' %><br />
    <%= f.email_field :email, autofocus: true, :class => 'field_input' %>
  </div>

  <div class="break">
  </div>

  <div class="field">
    <%= f.label :password, :class => 'field' %><br />
    <%= f.password_field :password, autocomplete: "off", :class => 'field_input' %>
  </div>

  <div style="height:1.5vh">
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Log in", :class => 'btn', :id => 'signup' %>
  </div>

  <div style="height:1.5vh"></div>
  
<% end %>

<%= render "devise/shared/links" %>
